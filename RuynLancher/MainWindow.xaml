<Window x:Class="RuynLancher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuynLancher"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="556" Width="939">
    <Grid Margin="0,0,0,18">
        <Button x:Name="LaunchGame" Content="Launch" HorizontalAlignment="Left" Height="49" Margin="62,196,0,0" VerticalAlignment="Top" Width="125" Click="Button_Click"/>
        <CheckBox x:Name="Windowed" Content="Run Windowed" HorizontalAlignment="Left" Margin="202,220,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LaunchEditor" Content="Launch Level Editor" HorizontalAlignment="Left" Height="49" Margin="62,131,0,0" VerticalAlignment="Top" Width="125" Click="LaunchEditor_Click"/>
        <Button x:Name="UploadLevels" Content="Upload level pack" HorizontalAlignment="Left" Height="49" Margin="62,65,0,0" VerticalAlignment="Top" Width="125" Click="UploadLevels_Click"/>
        <DataGrid x:Name="LevelPackDataGrid" SelectionMode="Single" Sorting="LevelPackDataGrid_Sorting" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" IsReadOnly="True" Margin="347,243,10,83" SelectionChanged="LevelPackDataGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Visibility="Hidden" Header="Id" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding LevelPackName}" Width="*"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*"/>
                <DataGridTextColumn Header="Level Count" Binding="{Binding LevelCount}" Width="*"/>
                <DataGridTextColumn Header="Download Count" Binding="{Binding DownloadCount}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="LevelPackLabel" Content="Server level packs" HorizontalAlignment="Left" Margin="347,212,0,0" VerticalAlignment="Top"/>
        <Button x:Name="DownloadButton" Content="Download Pack" IsEnabled="False"  HorizontalAlignment="Left" Margin="347,451,0,0" VerticalAlignment="Top" Height="40" Click="DownloadButton_Click"/>
        <Label x:Name="DownloadedPack" Content="Downloaded level packs" HorizontalAlignment="Left" Margin="347,47,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="DownloadedLevelPacks" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="347,73,10,372"/>
    </Grid>
</Window>
